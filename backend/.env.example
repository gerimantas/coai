# COAI Backend Environment Configuration Template
# Copy this file to .env and update the values

# OpenAI API Configuration (required for real AI integration)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Default AI Agent Configuration
DEFAULT_AI_AGENT=openai
FALLBACK_TO_MOCK=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=.coai/logs/coai.log

# Security Configuration
MAX_MESSAGE_LENGTH=10000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Development Settings
DEBUG_MODE=true
ENABLE_USAGE_TRACKING=true

# File Access Security
ALLOWED_BASE_PATHS=C:/ai_projects
MAX_FILE_SIZE=10485760

# Feature Flags
ENABLE_REAL_AI=false
ENABLE_CACHING=true
ENABLE_ANALYTICS=true
